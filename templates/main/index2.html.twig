{% extends 'base.html.twig' %}

{% block title %}Sign Up as a Client{% endblock %}

{% block body %}
<section class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h2 class="mb-4 text-center">Sign Up as a Client</h2>

      {# Flash messages for errors and success #}
      {% for message in app.flashes('error') %}
          <div class="alert alert-danger">
              {{ message }}
          </div>
      {% endfor %}

      {% for message in app.flashes('message') %}
          <div class="alert alert-success">
              {{ message }}
          </div>
      {% endfor %}

      {{ form_start(form, {'attr': {'class': 'p-4 border rounded bg-light'}}) }}

        {# Removed the ID field since it's auto-generated #}

        <div class="mb-3">
          {{ form_label(form.email, 'Email', {'attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
          {{ form_errors(form.email) }}
        </div>

        <div class="mb-3">
          {{ form_label(form.password, 'Password', {'attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Enter password'}}) }}
          {{ form_errors(form.password) }}
        </div>

        <div class="mb-3">
          {{ form_label(form.retypepassword, 'Re-Type Password', {'attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.retypepassword, {'attr': {'class': 'form-control', 'placeholder': 'Re-type password'}}) }}
          {{ form_errors(form.retypepassword) }}
        </div>

        <div class="mb-3">
          {{ form_label(form.casesNumber, 'Cases Number', {'attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.casesNumber, {'attr': {'class': 'form-control', 'placeholder': 'Enter number of cases'}}) }}
          {{ form_errors(form.casesNumber) }}
        </div>

        <div class="mb-3">
          {{ form_label(form.moreInformation, 'More Information', {'attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.moreInformation, {'attr': {'class': 'form-control', 'placeholder': 'Enter any additional information'}}) }}
          {{ form_errors(form.moreInformation) }}
        </div>

        <div class="mb-3">
          {{ form_label(form.number, 'Phone Number', {'attr': {'class': 'form-label'}}) }}
          {{ form_widget(form.number, {'attr': {'class': 'form-control', 'placeholder': 'Enter phone number', 'pattern': '[0-9]*', 'inputmode': 'numeric'}}) }}
          {{ form_errors(form.number) }}
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Sign Up</button>
        </div>

      {{ form_end(form) }}
    </div>
  </div>
</section>
{% endblock %}
