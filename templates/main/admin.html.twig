{% extends 'base.html.twig' %}

{% block title %}Sign Up as a Lawyer{% endblock %}

{% block body %}
  {% for message in app.flashes('message') %}
    <div class="alert alert-success">{{ message }}</div>
  {% endfor %}
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
        <th scope="col">Code</th>
        <th scope="col">Location</th>
        <th scope="col">Number</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for lawyer in lawyers %}
        <tr>
          <th scope="row">{{ loop.index }}</th>
          <td>{{ lawyer.email }}</td>
          <td>{{ lawyer.password }}</td>
          <td>{{ lawyer.code }}</td>
          <td>{{ lawyer.location }}</td>
          <td>{{ lawyer.number }}</td>
          <td>
            <a href="{{ path('edit_lawyer', {id: lawyer.id}) }}" class="btn btn-success">Edit</a>
            <a href="{{ path('delete_lawyer', {id: lawyer.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this lawyer?');">Delete</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
