{% extends 'base.html.twig' %}

{% block title %}Edit Lawyer{% endblock %}

{% block body %}
  {% for message in app.flashes('message') %}
    <div class="alert alert-success">{{ message }}</div>
  {% endfor %}

  <h1>Edit Lawyer</h1>

  <!-- Lawyer Edit Form -->
  <div class="card mb-4">
    <div class="card-header">
      <h5>Edit Lawyer Information</h5>
    </div>
    <div class="card-body">
      <form method="post">
        {{ form_start(form) }}
        <div class="form-group">
          {{ form_row(form.email) }}
        </div>
        <div class="form-group">
          {{ form_row(form.password) }}
        </div>
        <div class="form-group">
          {{ form_row(form.code) }}
        </div>
        <div class="form-group">
          {{ form_row(form.location) }}
        </div>
        <div class="form-group">
          {{ form_row(form.number) }}
        </div>
        <button type="submit" class="btn btn-primary">Update Lawyer</button>
        {{ form_end(form) }}
      </form>
    </div>
  </div>

  <!-- List of Lawyers -->
  <h3>All Lawyers</h3>
  <div class="card">
    <div class="card-header">
      <h5>Lawyer Directory</h5>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Password</th>
            <th scope="col">Code</th>
            <th scope="col">Location</th>
            <th scope="col">Number</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for lawyer in lawyers %}
            <tr>
              <th scope="row">{{ loop.index }}</th>
              <td>{{ lawyer.email }}</td>
              <td>{{ lawyer.password }}</td>
              <td>{{ lawyer.code }}</td>
              <td>{{ lawyer.location }}</td>
              <td>{{ lawyer.number }}</td>
              <td>
                <a href="{{ path('edit_lawyer', {id: lawyer.id}) }}" class="btn btn-success">Edit</a>
                <a href="{{ path('delete_lawyer', {id: lawyer.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this lawyer?');">Delete</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}
